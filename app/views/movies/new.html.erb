<h1>Add a Movie</h1>

<%= form_for(@movie) do |f| %>
  <%= f.label :movie_title%>
  <%= f.text_field :movie_title, required: true %>

  <%= f.label :movie_year %>
  <%= f.text_field :movie_year, required: true %>
  
  <%= f.label :movie_director %>
  <%= f.text_field :movie_director %>

  <%= f.label :movie_image %>
  <%= f.text_field :movie_image%>

  <%= f.label :movie_description %>
  <%= f.text_field :movie_description %>

  <%= f.submit %>
<% end %>

